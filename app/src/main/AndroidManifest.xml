<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.calvintd.kade.soccerbase">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/soccer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.calvintd.kade.soccerbase.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.calvintd.kade.soccerbase.activity.listing.ListingNavigationActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.listing.LeagueListingActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.league.LeagueDescriptionActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.league.LeagueScheduleActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.MatchDetailsActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.search.SearchNavigationActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.search.MatchSearchActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.favorite.FavoriteNavigationActivity"/>
        <activity android:name="com.calvintd.kade.soccerbase.activity.favorite.FavoriteMatchesActivity"/>
    </application>

</manifest>